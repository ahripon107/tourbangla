<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/etBlogWriterName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="আপনার নাম"
                            android:inputType="textCapWords"
                            android:maxLength="50"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/etBlogTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="ব্লগ শিরোনাম"
                            android:inputType="textCapWords"
                            android:maxLength="200"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/etBlogDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="ব্লগ বিস্তারিত"
                            android:inputType="textMultiLine|textCapSentences"
                            android:minLines="3"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/etTags"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="ট্যাগ (কমা দিয়ে আলাদা করুন)"
                            android:inputType="textCapWords"
                            android:maxLength="200"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:text="কোনও ছবি সিলেক্ট করা হয়নি"
                android:textSize="17sp" />


            <Button
                android:id="@+id/btnSelectPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT PICTURE (OPTIONAL)"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimary" />


            <Button
                android:id="@+id/btnDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DONE"
                android:textSize="20sp"
                android:background="@android:color/transparent"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimary" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>