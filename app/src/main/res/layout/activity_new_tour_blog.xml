<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etBlogTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ব্লগ শিরোনাম"
                    android:padding="5dp"
                    android:inputType="textCapWords"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:minHeight="40dp"
                    android:maxLines="3"
                    android:minLines="2"
                    android:background="@drawable/edit_text_background"
                    android:maxLength="80"
                    android:textSize="17sp" />


                <EditText
                    android:id="@+id/etBlogDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    android:background="@drawable/edit_text_background"
                    android:ems="10"
                    android:hint="ব্লগ বিস্তারিত"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="4"
                    android:textSize="17sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:textColor="@color/Black"
                android:text="কোনও ছবি সিলেক্ট করা হয়নি"
                android:textSize="17sp" />


            <Button
                android:id="@+id/btnSelectPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:text="ছবি সিলেক্ট করুন (অপশনাল)"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />


            <Button
                android:id="@+id/btnDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:text="সাবমিট"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>