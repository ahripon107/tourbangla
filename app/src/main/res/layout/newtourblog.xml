<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_barnewblog"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    >
                    <EditText
                        android:id="@+id/etBlogWriterName"
                        android:layout_width="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:maxLength="40"
                        android:hint="Your name"/>

                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    >
                    <EditText
                        android:id="@+id/etBlogTitle"
                        android:layout_width="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:maxLength="100"
                        android:hint="Blog Title"/>

                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    >
                    <EditText
                        android:id="@+id/etBlogDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:inputType="textMultiLine"
                        android:hint="Blog Details"/>
                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    >
                    <EditText
                        android:id="@+id/etTags"
                        android:layout_width="match_parent"
                        android:inputType="textCapWords"
                        android:layout_height="wrap_content"
                        android:maxLength="100"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:hint="Tags (Separate by comma)"/>
                </android.support.design.widget.TextInputLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Picture Selected"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:textSize="17sp" />

            <com.dd.ShadowLayout
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_cornerRadius="2dp"
                app:sl_dx="5dp"
                app:sl_dy="5dp"
                app:sl_shadowColor="#AA000000"
                android:layout_gravity="right">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="88dp"
                    android:minHeight="36dp"
                    android:padding="4dp"
                    android:id="@+id/btnSelectPicture"
                    android:textColor="@android:color/white"
                    android:background="@drawable/raised_selector"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:text="SELECT PICTURE (OPTIONAL)"/>

            </com.dd.ShadowLayout>

            <com.dd.ShadowLayout
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_cornerRadius="2dp"
                app:sl_dx="5dp"
                app:sl_dy="5dp"
                app:sl_shadowColor="#AA000000"
                android:layout_gravity="right">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="88dp"
                    android:minHeight="36dp"
                    android:padding="4dp"
                    android:id="@+id/btnDone"
                    android:textColor="@android:color/white"
                    android:background="@drawable/raised_selector"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:text="DONE"/>

            </com.dd.ShadowLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>