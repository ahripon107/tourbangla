<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/blogPostContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <com.androidfragmant.tourxyz.banglatourism.view.RoundedImageView
            android:id="@+id/imgBlogPost"
            android:layout_width="0dp"
            android:layout_height="100dp"

            android:layout_weight="1"
            android:src="@drawable/ic_profile" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtPostTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:text="Titleghgh bhbjh bhbhjbj bhbh"
                android:textColor="@color/cpb_green"
                android:textSize="20.0sp" />

            <TextView
                android:id="@+id/txtPostWriter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_marginTop="5.0dip"
                android:text="Writer"
                android:textColor="@color/Blue"
                android:textSize="15.0sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtPostTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:text="Tags"
                android:textColor="@color/Orange"
                android:textSize="15.0sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_blog_time_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Timestamp"
                android:textColor="@color/Green"
                android:textSize="15.0sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>