<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tourOfferCardContainer"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/tourOfferImage"
            android:src="@drawable/noimage"
            android:scaleType="fitXY"
            android:contentDescription="Browse" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="10dp"
            android:textColor="@color/cpb_blue_dark"
            android:id="@+id/tourOfferTitle"
            android:background="@drawable/border"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_margin="10dp"
            android:textColor="@color/cpb_green"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:id="@+id/tourOfferSummary" />

        <com.dd.ShadowLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:sl_cornerRadius="2dp"
            app:sl_dx="5dp"
            app:sl_dy="5dp"
            app:sl_shadowColor="#AA000000"
            android:layout_gravity="right">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="88dp"
                android:minHeight="36dp"
                android:padding="4dp"
                android:id="@+id/tourOfferDetails"
                android:textColor="@android:color/white"
                android:background="@drawable/raised_selector"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:text="Offer Details"/>

        </com.dd.ShadowLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>