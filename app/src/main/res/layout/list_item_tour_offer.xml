<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tourOfferCardContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.yayandroid.parallaxrecyclerview.ParallaxImageView
        android:id="@+id/tourOfferImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="Browse"
        android:src="@drawable/noimage" />

    <TextView
        android:id="@+id/tourOfferTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/cpb_blue_dark" />

    <TextView
        android:id="@+id/tourOfferSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/cpb_green"
        android:textStyle="italic" />


    <Button
        android:id="@+id/tourOfferDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@android:color/transparent"
        android:padding="4dp"
        android:text="বিস্তারিত"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/colorPrimary" />

</LinearLayout>

