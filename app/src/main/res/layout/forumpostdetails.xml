<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/colayout"
    tools:context=".activities.ForumPostDetailsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/touroperatorapp_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question"
        android:id="@+id/tvQuestion"
        android:layout_margin="7dp"
        android:textColor="@color/Green"
        android:layout_below="@id/touroperatorapp_bar"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asked By"
        android:id="@+id/tvAskedBy"
        android:layout_margin="7dp"
        android:textColor="@color/Blue"
        android:layout_below="@id/tvQuestion"
        android:textSize="15sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add an answer"
        android:id="@+id/btnAnswer"
        android:layout_gravity="right"
        android:layout_below="@id/tvAskedBy"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAnswer"
        android:id="@+id/forumPostCommentList">

    </android.support.v7.widget.RecyclerView>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewTourOperatorDetails"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/touroperatordetails">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>