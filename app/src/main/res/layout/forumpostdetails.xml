<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/colayout"
    tools:context=".activities.ForumPostDetailsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/touroperatorapp_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question"
        android:id="@+id/tvQuestion"
        android:layout_margin="7dp"
        android:layout_below="@id/touroperatorapp_bar"
        android:textSize="17sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asked By"
        android:id="@+id/tvAskedBy"
        android:layout_margin="7dp"
        android:textColor="@color/Blue"
        android:layout_below="@id/tvQuestion"
        android:textSize="15sp"/>

    <com.dd.ShadowLayout
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:sl_cornerRadius="2dp"
        app:sl_dx="5dp"
        app:sl_dy="5dp"
        app:sl_shadowColor="#AA000000"
        android:layout_gravity="right"
        android:layout_below="@id/tvAskedBy"
        android:id="@+id/layoutid"
        android:layout_alignParentRight="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="88dp"
            android:minHeight="36dp"
            android:padding="4dp"
            android:id="@+id/btnAnswer"
            android:textColor="@android:color/white"
            android:background="@drawable/raised_selector"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:text="Add an answer"/>

    </com.dd.ShadowLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutid"
        android:id="@+id/forumPostCommentList">

    </android.support.v7.widget.RecyclerView>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewForumPostDetails"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/forumpostdetails">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>