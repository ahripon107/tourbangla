<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:id="@+id/tvStartPlace"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="যাত্রা শুরুর স্থান"
                            android:textSize="20sp"/>
                        <Spinner
                            android:id="@+id/spnFrom"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            style="@android:style/Widget.Holo.Light.Spinner"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:id="@+id/tvEndPlace"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="যাত্রা শেষের স্থান"
                            android:textSize="20sp"/>
                        <Spinner
                            android:id="@+id/spnTo"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            style="@android:style/Widget.Holo.Light.Spinner"
                            android:spinnerMode="dropdown"
                            android:clickable="true"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:id="@+id/tvJanbahon"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="যানবাহন"
                            android:textSize="20sp"/>
                        <Spinner
                            android:id="@+id/spnVehicle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            style="@android:style/Widget.Holo.Light.Spinner"/>

                    </LinearLayout>
                    <com.dd.ShadowLayout
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:sl_cornerRadius="2dp"
                        app:sl_dx="5dp"
                        app:sl_dy="5dp"
                        app:sl_shadowColor="#AA000000"
                        android:layout_gravity="right">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="88dp"
                            android:minHeight="36dp"
                            android:padding="4dp"
                            android:id="@+id/btnSearch"
                            android:textColor="@android:color/white"
                            android:background="@drawable/raised_selector"
                            android:textAppearance="@style/TextAppearance.AppCompat.Button"
                            android:text="Search"/>

                    </com.dd.ShadowLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:id="@+id/numberOfResultsFound"
                android:textColor="@color/DarkGreen"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/farelist"
                android:layout_margin="5dp"/>
        </LinearLayout>


    </ScrollView>

</LinearLayout>